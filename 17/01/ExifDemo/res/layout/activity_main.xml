<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ExifActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入Attribute" />

    <EditText
        android:id="@+id/et_attr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入Attribute-value" />

    <EditText
        android:id="@+id/et_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_saveExif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存Exif信息到图片" />

    <Button
        android:id="@+id/btn_readExif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从图片中获取Exif信息" />

    <Button
        android:id="@+id/btn_readExifInLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打印内置Exif信息到日志中" />

</LinearLayout>