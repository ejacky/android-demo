<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnEventBasePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OpenEventListener" />

        <Button
            android:id="@+id/btnInnerClassPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OpenInnerClass" />

        <Button
            android:id="@+id/btnOuterClassPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OpenOuterClass" />

        <Button
            android:id="@+id/btnActivitySelfPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OpenActivitySelf" />

        <Button
            android:id="@+id/btnActivitySelfListenerPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OpenActivitySelfListener" />

        <Button
            android:id="@+id/btnAnonymousInnerClassPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OpenAnonymousInnerClass" />

        <Button
            android:id="@+id/btnAnonymousInnerClassReusePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OpenAnonymousInnerClassReuse" />

        <Button
            android:id="@+id/btnBindingXMLAttrPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OpenBindingXMLAttrReuse" />
    </LinearLayout>

</ScrollView>