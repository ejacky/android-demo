<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnActionItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加Action item" />

    <Button
        android:id="@+id/btnNavigating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ActionBar导航" />

    <Button
        android:id="@+id/btnNavigatingxml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过配置，实现ActionBar导航" />

    <Button
        android:id="@+id/btnActionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="展示一 个ActionView" />
	 <Button
        android:id="@+id/btnActionProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="展示一 个ActionProvider" />
	 
	 <Button
        android:id="@+id/btnActionTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="展示一 个ActionTab" />
	 
	 <Button
        android:id="@+id/btnActionList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="展示一 个ActionBar下拉项" />
</LinearLayout>