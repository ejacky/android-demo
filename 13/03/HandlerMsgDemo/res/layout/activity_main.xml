<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SendMessageActivity" >

    <Button
        android:id="@+id/btnMessage1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用Handler.sendMessage发送消息" />

    <Button
        android:id="@+id/btnMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用Message.sendToTarget发送消息" />

    <Button
        android:id="@+id/btnMessage3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送空消息" />

    <Button
        android:id="@+id/btnMessage4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用Handler.sendMessage发送延迟消息" />

    <Button
        android:id="@+id/btnMessage5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送延迟空消息" />

    <TextView
        android:id="@+id/tvMes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>